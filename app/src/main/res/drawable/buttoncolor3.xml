<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient
                android:gradientRadius="100"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#abdcba"
                android:endColor="#73da60"
                android:type="radial"
                />
            <corners
                android:radius="40dp"
                />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:gradientRadius="150"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#abdcba"
                android:endColor="#73da60"
                android:type="radial"
                />
            <corners
                android:radius="20dp"
                />
        </shape>
    </item>

</selector>